#! /bin/bash

export PYTHONPATH=/software/python/EPD/current/bin

# Setup permissions
umask 003

# Source Nipype, FSL, Freesurfer
source /etc/fsl/5.0/fsl.sh
source /software/common/bin/fss 5.3.0 > /dev/null

# add PATHs
export ANTSPATH=/software/ANTS/versions/130823
export DTIPrepPATH=/software/DTIPrep/130630
export AFNIPATH=/usr/lib/afni/bin
export PATH=$AFNIPATH:$DTIPrepPATH:$ANTSPATH:$PATH

export PATH=/software/python/anaconda/bin:$PATH
source activate resting

# Freesurfer
export SUBJECTS_DIR=/mindhive/xnat/surfaces/isn

# Multithreading
export MKL_NUM_THREADS=4
export OMP_NUM_THREADS=4

# Project name for prompt
export project_name="ISN"
module add matlab

# If not running interactively, don't do anything
[ -z "$PS1" ] && return

# Don't put duplicate lines in the history
export HISTCONTROL=ignoredups

# Check the window size after each command and, if necessary,
# update the values of LINES and COLUMNS
shopt -s checkwinsize

# make less more friendly for non-text input files, see lesspipe(1)
[ -x /usr/bin/lesspipe ] && eval "$(lesspipe)"

# set variable identifying the chroot you work in (used in the prompt below)
if [ -z "$debian_chroot" ] && [ -r /etc/debian_chroot ]; then
	debian_chroot=$(cat /etc/debian_chroot)
fi

# set a fancy prompt
case "$TERM" in
xterm-color)
	PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
	;;
*)
	PS1='${debian_chroot:+($debian_chroot)}\u@\h:\w\$ '
	;;
esac

# If this is an xterm set the title to user@host:dir
case "$TERM" in
xterm*|rxvt*)
	PROMPT_COMMAND='echo -ne "\033]0;${USER}@${HOSTNAME}: ${PWD/$HOME/~}\007"'
	;;
*)
	;;
esac

# Alias definitions
alias ls='ls --color=auto'
alias ..='cd ..'
alias ll='ls -l'
alias la='ls -a'
alias ip='ipython --no-banner'
alias spm='matlab -r "try, spm fmri, end"'
alias iqstat='~tkp/bin/iqstat'

# VIM mode
set -o vi

# Enable programmable completion features
if [ -f /etc/bash_completion ]; then
	. /etc/bash_completion
fi

export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/software/local/lib

. /etc/fsl/fsl.sh


# Setup PATH for all of the software
export PATH=/software/python/EPD/current/bin:$PATH
export PATH=/software/matlab_versions/2010b/bin/:$PATH
export PATH=/software/python/pycharm-1.5.3/bin:$PATH
export PATH=/software/common/bin:$PATH
export PATH=/software/spm8/:$PATH
export PATH=/software/afni/:$PATH
export PATH=/usr/lib/mrtrix/bin/:$PATH

export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/usr/lib/mrtrix/lib
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/usr/local/lib

#source /software/python/setup-nipype-0.7.sh
#source /software/python/EPD/virtualenvs/7.3/nipype0.7/bin/activate

# Setup the torque parallelization queue:
if [ -f /etc/profile.d/modules.sh ]
then
	source /etc/profile.d/modules.sh
fi

if [ `hostname` == "ba3" ]
then
	echo -e "\e[0;37mConnected to ba3: Initializing environment for pbs queue\e[0m "
	module add torque
#	export DISPLAY=ba3.mit.edu$DISPLAY
	export DISPLAY=$DISPLAY
fi

if [ `hostname` == "ba8" ]
then
	echo -e "\e[0;37mConnected to ba8: Initializing environment for pbs queue\e[0m "
	module add torque
	export DISPLAY=ba8.mit.edu$DISPLAY
fi

